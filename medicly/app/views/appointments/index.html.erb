<h2>Your List of Appointments:</h2>

<% if @type == "general" %>
  <h3>general appoinments below</h3>

<% end %>
<% @appointments.each do |appointment| %>
  <p><%= link_to appointment.appointment_date.strftime("%d %b %Y"), appointment_path(appointment) %> | <%= appointment.appointment_type.name %>
<% end %>
<br>

<p><%= link_to 'View Doctors', doctors_path, :class=>'fade-btn' %></p>

<p><%= link_to 'Create a new Appointment', new_appointment_path, :class=>'fade-btn' %></p>

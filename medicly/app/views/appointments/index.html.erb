<div class="responsive-table">
<h2>Appointments</h2>
<br>

<% if @type == "general" %>
  <h3>general appoinments below</h3>

<% end %>
<% @appointments.each do |appointment| %>
  <p><%= link_to appointment.appointment_date.strftime("%d %b %Y"), appointment_path(appointment) %> | <%= appointment.appointment_type.name %>
<% end %>
<br><br>

<p><%= link_to 'Book an Appointment', new_appointment_path, :class=>'fade-btn' %></p>
</div>

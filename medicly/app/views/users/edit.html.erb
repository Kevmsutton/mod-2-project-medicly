<div class="responsive-table">
<h2>Change your details here:</h2>

<br>

<%= form_for @user do |f| %>
  <p>
    <%= f.label :password, "Password:"%>
    <%= f.password_field :password%>
  </p>
  <p>
    <%= f.label :full_name, "Full Name:" %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :date_of_birth, "Date of Birth:" %>
    <%= f.date_field :birth_date %>
  </p>
  <p>
    <%= f.label "Gender:" %>
    <%= f.text_field :gender %>
  </p>
  <p>
    <%= f.label "Allergies (if any):" %>
    <%= f.text_field :allergies %>
  </p>
  <p>
    <%= f.submit "Edit", :class=>'fade-btn' %>
  </p>
<% end %>

<p><%= link_to 'Back', user_path, :class=>'fade-btn' %></p>

</div>

<!DOCTYPE html>
<html>
  <head>
    <title>Medicly</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <h1>Medicly</h1>
    <% if flash[:errors] %>
        <% flash[:errors].each do |e| %>
          <p style="color: red;">
            <%= e %>
          </p>
        <% end %>
    <% end %>
    <%= yield %>
  </body>
</html>

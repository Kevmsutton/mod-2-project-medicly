<%= form_for @doctor do |f| %>

<p>  <%= f.label "Doctor:" %>
  <%= f.text_field :name %>
</p>
<p>
  <%= f.label "Speciality:" %>
  <%= f.text_field :speciality %>
</p>
<p>
  <%= f.label :post_code, "Post Code:" %>
  <%= f.text_field :post_code %>
</p>
<p>
  <%= f.submit 'Save', :class=>'fade-btn'%>
</p>
  <% end %>

<p><%= link_to 'Back', doctors_path, :class=>'fade-btn' %></p>
